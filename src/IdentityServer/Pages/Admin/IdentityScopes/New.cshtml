@page
@using IdentityServer.Pages.Admin
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityServer.Pages.Admin.IdentityScopes.NewModel
@{
    ViewData[ViewDataKeys.Title] = "New Identity Scope";
}

<div class="clients-page">
    <h2>
        New Identity Scope
    </h2>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="InputModel.Name"></label>
                    <input class="form-control" asp-for="InputModel.Name" autofocus />
                </div>
                <div class="mb-3">
                    <label asp-for="InputModel.DisplayName"></label>
                    <input class="form-control" asp-for="InputModel.DisplayName" />
                </div>
                <div class="mb-3">
                    <label asp-for="InputModel.UserClaims">User Claims (space delimited)</label>
                    <input class="form-control" asp-for="InputModel.UserClaims" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-page="@AdminPageConstants.IdentityScopes">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
