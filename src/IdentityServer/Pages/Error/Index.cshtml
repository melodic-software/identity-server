@page
@model IdentityServer.Pages.Error.IndexModel
@{
    ViewData[ViewDataKeys.Title] = "Error";
}

<div class="error-page">
    <div class="lead">
        <h1>Error</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                Sorry, there was an error while processing the request.

                @if (Model.Error != null)
                {
                    <strong>
                        <em>
                            : @Model.Error.Error
                        </em>
                    </strong>

                    if (Model.Error.ErrorDescription != null)
                    {
                        <div>@Model.Error.ErrorDescription</div>
                    }
                }
                else if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                {
                    <div>@Model.ErrorMessage</div>
                }
            </div>
            
            @if (Model.Exception != null)
            {
                <p>@Model.Exception.Message</p>
                <pre>@Model.Exception.StackTrace</pre>
            }

            @if (Model.ShowRequestId)
            {
                <div class="request-id">Request ID: @Model.RequestId</div>
            }
            
            @if (!string.IsNullOrEmpty(Model.TraceId))
            {
                <div class="trace-id">Trace ID: @Model.TraceId</div>
            }
            
            @if (!string.IsNullOrEmpty(Model.CurrentActivity?.Id))
            {
                <div class="activity-id">Activity ID: @Model.CurrentActivity.Id</div>
            }
        </div>
    </div>
</div>
